# Copy this file to terraform.tfvars and fill in your values
# terraform.tfvars is gitignored and should not be committed

aws_region = "us-east-1"
environment = "dev"
project_name = "auction-lab"

# Database Configuration
db_name = "auction_db"
db_username = "admin"
db_password = "CHANGE_ME_SECURE_PASSWORD" # Use a strong password in production

# Instance Configuration
db_instance_class = "db.t3.micro" # Free tier eligible
db_engine_version = "15.4"
db_allocated_storage = 20
db_max_allocated_storage = 100
db_backup_retention_period = 7

# Security Configuration
db_publicly_accessible = false # Set to true for testing, false for production
enable_performance_insights = false
enable_deletion_protection = false # Set to true for production

